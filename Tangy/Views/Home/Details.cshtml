@model Tangy.Models.ShoppingCart
@{
    ViewData["Title"] = "Details";
}

<br />
<h2> Menu Item Details </h2>
<br />


<hr />
<form asp-action="Details" method="post">
    <input type="hidden" asp-for="ApplicationUserId" />
    <input type="hidden" asp-for="MenuItemId" />
    <div class="form-border">

        <div class=" row">


            <div class="col-8">
                <fieldset disabled>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="MenuItem.Name" class="custom-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="MenuItem.Name" class="form-control" />
                        </div>
                        

                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="MenuItem.Description" class="custom-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <textarea asp-for="MenuItem.Description" class="form-control" style="height: 150px;" ></textarea>
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="MenuItem.Spicyness" class="custom-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input value="@((MenuItem.ESpicy)Convert.ToInt32(Model.MenuItem.Spicyness))" class="form-control" />
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="MenuItem.Price" class="custom-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="MenuItem.Price" class="form-control" />
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="MenuItem.CategoryId" class="custom-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="MenuItem.Category.Name" class="form-control" />

                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="MenuItem.SubCategoryId" class="custom-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="MenuItem.SubCategory.Name" class="form-control" />

                        </div>
                    </div>
                </fieldset>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="Count" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>

                    </div>
                    

                </div>
                <div class="row">
                    <div class="col-4"></div>
                    <div class=" col-5">
                        <div class="form-group">
                            <input type="submit" value="Add to Cart" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-success">Back to Menu</a>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </div>

            </div>
            
            <div class="col-4">
                <div class="row col-1"></div>
                <div class="col-11">
                    
                    <img src="@Model.MenuItem.Image" style="width: 100%; border-radius: 2px; border: 1px solid #bbb9b9;" />
                    </div>
                </div>
        </div>


    </div>
</form>

<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

