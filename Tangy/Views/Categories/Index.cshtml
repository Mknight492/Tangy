@model IEnumerable<Tangy.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<br/>
<h2>Index</h2>
<hr/>
<p>
    @await Html.PartialAsync("_CreateButtonPartial")

</p>
<div class="form-border">
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                @await Html.PartialAsync("_TableButtonPartial",item.Id)
            </td>
        </tr>
}
    </tbody>
</table>
</div>