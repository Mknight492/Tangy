    ViewData["Title"] = "Details";
}
<br/>
<h2>Category Type Details</h2>
<br/>
<div class="  form-border">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="Name" class="custom-label"></label>
