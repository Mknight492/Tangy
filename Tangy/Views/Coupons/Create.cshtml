@model Tangy.Models.Coupon

@{
    ViewData["Title"] = "Create";
}

<br/>
<h2>Create</h2>
<br/>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-border row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control"/>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Picture" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" id="projectImage" name="file" multiple class="form-control"/>
                </div>                
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CouponType" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.EcouponType>()" class="form-control"></select>
                </div>
                
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Discount" class="custom-label"></label>
                </div>  
                <div class="col-8">
                    <input asp-for="Discount" class="form-control"/>
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MinimumAmount" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MinimumAmount" class="form-control"/>
                </div>
                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsActive" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="IsActive" class="form-check" style="width: 70%; height: 80%;"/>
                </div>               
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4">
                    <input type="submit" class="btn btn-primary" value="Create"/>
                    <a asp-action="Index" class=" btn btn-success"> Index </a>
                </div>
            </div>
        </div>

    </div>
</form>
