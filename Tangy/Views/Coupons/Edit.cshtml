@model Tangy.Models.Coupon
@{
    ViewData["Title"] = "Edit";
}

<br/>
<h2>Edit</h2>

<br />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-border row">
        <div class="col-12">
            @{
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
            }
            <img src="@imgsrc" width="100%" style="border: solid 1px #a9a9a9; width: 100%;"/>
        </div>

        <div class="col-8" style="padding-top: 20px;">

            <input hidden asp-for="Id"/>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control"/>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Picture" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" id="projectImage" name="file" multiple class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CouponType" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.EcouponType>()" class="form-control"></select>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Discount" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Discount" class="form-control"/>
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MinimumAmount" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MinimumAmount" class="form-control"/>
                </div>
                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsActive" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="IsActive" class="form-check" style="width: 70%; height: 80%;"/>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-4"></div>
                <div class="col-4">
                    <input type="submit" class="btn btn-primary" value="Edit" asp-route-id="@Model.Id"/>
                    <a asp-action="Index" class=" btn btn-success"> Index </a>
                </div>
            </div>
        </div>


    </div>
</form>
