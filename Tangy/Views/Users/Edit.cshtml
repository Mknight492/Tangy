@model Tangy.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit";
}





<br/>
<h2>Edit User</h2>
<br />

<div class="col-8 form-border">
    <div class="col-12">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <input type="hidden" asp-for="Email"/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-5">                    
                    <label asp-for="Email"></label>
                </div>
                <div class=" col-7">
                    <input asp-for="Email" disabled class="form-control" />
                </div>
                    
            </div>
            <div class="form-group row">
                <div class="col-5">                    
                    <label asp-for="FirstName"></label>
                </div>
                <div class=" col-7">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5">                    
                    <label asp-for="LastName"></label>
                </div>
                <div class=" col-7">
                    <input asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5">                    
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class=" col-7">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5">                    
                    <label asp-for="LockoutEnd"></label>
                </div>
                <div class=" col-7">
                    <input asp-for="LockoutEnd" id="LockoutEnd" type="text" asp-format="{0:MM/dd/yyy}" class="form-control" />
                </div>
                <span asp-validation-for="LockoutEnd" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5">                    
                    <label asp-for="LockoutReason"></label>
                </div>
                <div class=" col-7">
                    <textarea asp-for="LockoutReason" class="form-control" > </textarea>
                </div>
                <span asp-validation-for="LockoutReason" class="text-danger" style="height: 150px;"></span>
            </div>

            <div class="form-group row">
                <div class="col-5">                    
                    <label asp-for="AccessFailedCount"></label>
                </div>
                <div class=" col-7">
                    <input asp-for="AccessFailedCount" class="form-control" />
                </div>
                <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-5"></div>
                <div class="col-7">
                    <button type="submit" class="btn btn-primary">Update User</button>
                    <a asp-action="Index" class="btn btn-success">Back to Users</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function() {
            var dateFormat = "mm/dd/yy",

                lockoutEnd = $("#LockoutEnd").datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    changeYear: true
                });
        });

    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
