@using System.Linq
@using Tangy.Extensions
@model Tangy.Models.SubCategoriesViewModels.SubCategoryandCategoryViewModel
@{
    ViewData["Title"] = "Create";
}
<br />
<h2>Create SubCatergory</h2>
<hr />
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row form-border">
    <div class="col-8" style="padding-top: 45px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" form-group row">
                <div class=" col-3">
                    <label asp-for="SubCategory.Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Name" class="form-control" />
                </div>
                <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
            </div>
            <div class=" form-group row">
                <div class=" col-3">
                    <label asp-for="SubCategory.CategoryId"></label>
                </div>
                <div class="col-5">
                    <select asp-for="SubCategory.CategoryId" asp-items="Model.CategoryList.ToSelectListItems(Model.SubCategory.CategoryId)" class="form-control"></select>
                </div>
                <span asp-validation-for="SubCategory.CategoryId" class="text-danger"></span>
            </div>
            <div class=" form-group row">
                <div class=" col-3">
                    <label asp-for="isNew"></label>
                </div>
                <div class="col-5">
                    <input asp-for="isNew" class="form-control" style="height: 90%; width: 60%;" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">

                </div>
                <div class=" col-5">
                    <input type="submit" value="Add SubCategory" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back To List </a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-4">
        @if (Model.SubCategoryList.Any())
        {
            <p> Existing Subcatergories</p>
            <ul class="list-group">
                @foreach (var item in Model.SubCategoryList)
                {
                    <li class="list-group-item"> @item</li>
                }
            </ul>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
